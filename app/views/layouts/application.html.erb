<!DOCTYPE html>
<html>
<head>
  <title>CharityStreak</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= yield :head %>
</head>
<body>
  <% if current_user %>
    <%= content_tag "div", class: "user-meta", data: { token: current_user.authentication_token, email: current_user.email } do %><% end %>
  <% end %>
  <%= yield %>
</body>
</html>
